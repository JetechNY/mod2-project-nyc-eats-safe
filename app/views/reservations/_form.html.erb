<% if flash[:my_errors] %>
  <% flash[:my_errors].each do |error| %>
    <p style="color:red;"><%= error %></p>
  <% end %>
<% end %>

<%= form_for @reservation do |f|%>

<%= f.label :restaurant %> 
<%= f.collection_select :restaurant_id, Restaurant.all, :id, :name %> <br>

<%= f.label :date %> 
<%= f.date_field :date, min: Date.today, max: Date.today + 365, as: :date, value: f.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %>
<br>
<%= f.label :time %>
<%= f.time_select :time,  {:minute_step => 30 , :ampm => true}%> <br>

<%= f.label :party_size %> 
<%= f.number_field :party_size %> <br>

<%= f.submit %> <br>
<br>

<% end %>
